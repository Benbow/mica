#!/bin/bash
# postinst script for drupal

set -e

if [ "$DPKG_DEBUG" = "developer" ]; then
    set -x
fi
 
package_name="mica-solr"
datadir="/var/lib/${package_name}"
filesdir="${datadir}/data"
backupdir="${datadir}/backups"
pkgdir="/usr/share/${package_name}"
docdir="/usr/share/doc/${package_name}"
upgradesdir="${docdir}/upgrades"
configdir="/etc/mica-solr"
default_configfile="${configdir}/conf"

OLDVERSION="$2"

case "$1" in
    configure)

		cd /var/lib/mica-solr-installer && make clean all install oldversion=$2

		# Permissions
		dpkg-statoverride --list $filesdir || dpkg-statoverride --add --force --update www-data www-data 0750 $filesdir

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
         echo "postinst called with unknown argument \`$1'" >&2
         exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

exit 0
