function _get_mlid($path) {
	$mlid = null;

	$tree =  menu_tree_all_data('main-menu');
	foreach($tree as $item) {
		if ($item['link']['link_path'] == $path) {
			$mlid = $item['link']['mlid'];
			break;
		}
	}

	return $mlid;
}